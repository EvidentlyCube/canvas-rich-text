{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "Node",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "allowJs": false
    },
    "include": [
        "./src"
    ]
}
